<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:scaleType="centerCrop">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="900dp"
            android:layout_marginTop="0dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/image_description"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="920dp"
            android:text="Canada"
            android:textSize="20sp"
            android:textColor="#000"
            />



        <ImageButton
            android:background="#ffff"
            android:id="@+id/foodlogo"
            android:src="@drawable/foodlogo"
            android:layout_marginTop="950dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <ImageButton
            android:background="#ffff"
            android:id="@+id/hcbaselogo"
            android:src="@drawable/hcbaselogo"

            android:layout_marginTop="1010dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>
        <ImageButton
            android:background="#ffff"
            android:id="@+id/hcotclogo"
            android:src="@drawable/hcotclogo"

            android:layout_marginTop="1060dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>

        <ImageButton
            android:background="#ffff"
            android:id="@+id/schemecalculator"
            android:src="@drawable/schemecalculator"

            android:layout_marginTop="1110dp"
            android:layout_width="match_parent"
            android:layout_height="45dp"/>


    </RelativeLayout>


</ScrollView>
